@model PagedList.IPagedList<FilmsCatalog.Models.Film>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Каталог фильмов";
}
<div class="jumbotron">
    <p>
        @Html.ActionLink("Добавить фильм", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.LabelFor(m => Model[0].Poster)
            </th>
            <th>
                @Html.LabelFor(m => Model[0].Title)
            </th>
            <th>
                @Html.LabelFor(m => Model[0].Description)
            </th>
            <th>
                @Html.LabelFor(m => Model[0].Year)
            </th>
            <th>
                @Html.LabelFor(m => Model[0].Director)
            </th>
            <th>
                @Html.LabelFor(m => Model[0].user)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        if (item.Poster != null)
                        {
                            <div class="display-label">
                                <img src="~/Content/Images/@Url.Content(item.Poster)" alt="Poster" style="height:120px;width:80px;" />
                            </div>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user)
                </td>
                <td>
                    @{ if (@ViewBag.currentUser == item.user)
                        {
                            @Html.ActionLink("Edit ", "Edit", new { id = item.Id })

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>